<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for IBM Watson SDK.</description>

    <arg value="sp"/>
    <arg name="colors"/>
    <arg name="encoding" value="UTF-8"/>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/spec/*</exclude-pattern>

    <file>./src</file>

    <rule ref="PSR2"/>
</ruleset>
